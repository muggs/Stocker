<div class="container">
<h1> Expense Dashboard </h1>
<ul>
  <table class="table table-bordered">  
    <thead>  
      <tr>
      	<th>Expense ID</th>
      	<th>Expense Date</th>
      	<th>User</th>
        <th>Expense Type</th>
        <th>Vendor</th>
        <th>City</th>  
        <th>State</th>  
        <th>Amount</th>
        <th>Action</th>
      </tr>  
    </thead>  
    <tbody>
    	<% @expenses.each do |expense| %>  
      <tr>
      	<td><%= expense.id %></td>
      	<td><%= expense.expense_date %></td>
      	<td><%= expense.user.username %></td>
        <td><%= expense.expense_type %></td>
        <td><%= expense.vendor_name %></td>
        <td><%= expense.city %></td>
        <td><%= expense.state %></td>
        <td><%= expense.amount %></td>
        <td><%= link_to 'Show', expense, :class => "btn btn-primary" %>
    		<%= link_to 'Edit', edit_expense_path(expense), :class => "btn btn-primary" %>
    		<%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %></td>
      </tr> 
      <% end %>  
    </tbody>  
 	</table> 
</ul>
<%= link_to "Add New Expense", new_expense_path, :class => "btn btn-primary" %>
<%= link_to "Home", pages_index_path, :class => "btn btn-primary" %>
</div>
