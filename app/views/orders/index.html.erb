<div class="container">
<h1> Orders from Customer : <%= @contact.name %></h1>
<ul>
  <table class="table table-bordered">  
    <thead>  
      <tr>  
        <th>Order ID</th>
        <th>Order Date</th>
        <th>Customer</th>
        <th>Due Date</th>
        <th>Discount</th>
        <th>Order Type</th>
        <th>Remarks</th>  
        <th>Updated At</th>
        <th>Action</th>
      </tr>  
    </thead>  
    <tbody>
    	<% @orders.each do |order| %>  
      <tr>  
        <td><%= order.id %></td>
        <td><%= order.order_date %></td>
        <td><%= order.contact.name %></td>
        <td><%= order.due_date %></td>
        <td><%= order.discount %></td>
        <td><%= order.order_type %></td>
        <td><%= order.remarks %></td>
        <td><%= order.updated_at %></td>
        <td><%= link_to 'Show', order, :class => "btn btn-primary" %>
    		<%= link_to 'Edit', edit_order_path(order), :class => "btn btn-primary" %>
    		<%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %></td>
      </tr> 
      <% end %>  
    </tbody>  
 	</table> 
</ul>
<%= link_to 'Back', :back, :class => "btn btn-primary" %>
<%= link_to 'Home', pages_index_path, :class => "btn btn-primary" %>
</div>
