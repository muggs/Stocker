<div class="container">
<h1> Customer Dashboard </h1>
<%= form_tag customers_index_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil, :class => "btn btn-primary"  %>
  </p>
<% end %>
<ul>
  <table class="table table-bordered">  
    <thead>  
      <tr>  
        <th>Customer ID</th>  
        <th>Customer Name</th>  
        <th>Company</th>  
        <th>City</th>
        <th>State</th>
        <th>Country</th> 
        <th>Action</th>
      </tr>  
    </thead>  
    <tbody>
    	<% @customers.each do |customer| %>  
      <tr>  
        <td><%= customer.id %></td>
        <td><%= customer.name %></td>
        <td><%= customer.company %></td>
        <td><%= customer.city %></td>
        <td><%= customer.state %></td>
        <td><%= customer.country %></td>
        <td><%= link_to 'Show', customer, :class => "btn btn-primary" %>
    		<%= link_to 'Edit', edit_contact_path(customer), :class => "btn btn-primary" %>
    		<%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %>
    		<%= link_to 'Show Order', {:controller => "orders", :action => "index", :contact_id => customer.id}, :class => "btn btn-primary" %>
    		<%= link_to 'Add Order', {:controller => "orders", :action => "new", :contact_id => customer.id}, :class => "btn btn-primary" %></td>
      </tr> 
      <% end %>  
    </tbody>  
 	</table>
</ul>
<%= link_to "Home", pages_index_path, :class => "btn btn-primary" %>
</div>
