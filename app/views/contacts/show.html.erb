<div class="container">
<h2>Details for Contact # <%= @contact.name %></h2>
<div class="row">
	<div class="span2">
  	<b>No:</b>
  </div>
  <%= @contact.id %>
</div>
<div class="row">
	<div class="span2">
  	<b>Type:</b>
  </div>	
  <%= @contact.contact_type %>
</div>
<div class="row">
	<div class="span2">
  	<b>Name:</b>
  </div>
  <%= @contact.name %>
</div>
<div class="row">
	<div class="span2">
  	<b>Company:</b>
  </div>	
  <%= @contact.company %>
</div>
<div class="row">
	<div class="span2">
  	<b>Address:</b>
  </div>	
  <%= @contact.street_address %>
</div>
<div class="row">
	<div class="span2">
  	<b>City:</b>
  </div>
  <%= @contact.city %>
</div>
<div class="row">
	<div class="span2">
  	<b>State:</b>
  </div>
  <%= @contact.state %>
</div>
<div class="row">
	<div class="span2">
  	<b>Country:</b>
  </div>	
  <%= @contact.country %>
</div>
<div class="row">
	<div class="span2">
  	<b>Postal Code:</b>
  </div>	
  <%= @contact.postal_code %>
</div>
<div class="row">
	<div class="span2">
  	<b>Email:</b>
  </div>	
  <%= @contact.email %>
</div>
<div class="row">
	<div class="span2">
  	<b>Contact Number 1:</b>
  </div>	
  <%= @contact.contact_number_1 %>
</div>
<div class="row">
	<div class="span2">
  	<b>Contact Number 2:</b>
  </div>	
  <%= @contact.contact_number_2 %>
</div>
<div class="row">
	<div class="span2">
  	<b>Fax Number:</b>
  </div>	
  <%= @contact.fax_number %>
</div>

<%= link_to "Edit", edit_contact_path(@contact), :class => "btn btn-primary" %> 
<%= link_to "Delete", contact_path(@contact), :method => :delete, :data => {:confirm => "Are you sure?"}, :class => "btn btn-primary" %>
<%= link_to "Back", :back, :class => "btn btn-primary" %>
</div>