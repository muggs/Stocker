<div class="container">
<h1> Purchases from Supplier : <%= @contact.name %></h1>
<ul>
  <table class="table table-bordered">  
    <thead>  
      <tr>  
        <th>Purchase ID</th>  
        <th>Stock Type</th>  
        <th>Stone Type</th>
        <th>Stone Type Desc.</th>
        <th>Shape</th>
        <th>Size</th>
        <th>Piece / Line</th>
        <th>Net Weight</th>
        <th>Puchase Price per ct</th>
        <th>Discount</th>
        <th>Net Amount</th>
        <th>Due Date</th>
        <th>Broker Name</th>
        <th>Updated At</th>
        <th>Action</th>
      </tr>  
    </thead>  
    <tbody>
    	<% @purchases.each do |purchase| %>  
      <tr>  
        <td><%= purchase.id %></td>
        <td><%= purchase.stock_type %></td>
        <td><%= purchase.stone_type %></td>
        <td><%= purchase.stone_type_description %></td>
        <td><%= purchase.shape %></td>
        <td><%= purchase.size %></td>
        <td><%= purchase.piece %></td>
        <td><%= purchase.net_weight %></td>
        <td><%= purchase.purchase_price_per_ct %></td>
        <td><%= purchase.discount %></td>
        <td><%= purchase.calculate_net_amount %></td>
        <td><%= purchase.due_date %></td>
        <td><%= purchase.broker_name %></td>
        <td><%= purchase.updated_at %></td>
        <td><%= link_to 'Show', purchase, :class => "btn btn-primary" %>
    		<%= link_to 'Edit', edit_purchase_path(purchase), :class => "btn btn-primary" %>
    		<%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %>
    		<%=	link_to	'Show Related Stock', purchase_stock_path(purchase), :class => "btn btn-primary" %>
    		<%=	link_to	'Edit Related Stock', edit_purchase_stock_path(purchase), :class => "btn btn-primary" %>
    		</td>
        </tr> 
      <% end %>  
    </tbody>  
 	</table> 
</ul>
<%= link_to 'Back', :back, :class => "btn btn-primary" %>
<%= link_to 'Add Purchase', new_purchase_path(@contact), :class => "btn btn-primary" %>
<%= link_to 'Home', pages_index_path, :class => "btn btn-primary" %>
</div>
